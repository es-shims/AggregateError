{
	"root": true,

	"extends": "@ljharb",

	"globals": {
		"AggregateError": false
	},

	"rules": {
		"id-length": 1,
		"max-params": [2, 3],
		"new-cap": [2, {
			"capIsNewExceptions": [
				"CreateDataPropertyOrThrow",
				"CreateMethodProperty",
				"GetIntrinsic",
				"GetIterator",
				"IsArray",
				"IterableToList",
				"OrdinarySetPrototypeOf",
				"Type"
			],
		}],
		"operator-linebreak": [2, "before"],
	},
}
